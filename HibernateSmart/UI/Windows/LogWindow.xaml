<Window x:Class="HibernateSmart.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HibernateSmart"
        mc:Ignorable="d"
        Title="HibernateSmart - Log"
        Width="800" Height="500"
        
        Background="Black" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10 10 0 10">
        <TextBlock x:Name="logTitle" DockPanel.Dock="Top" Text="Hibernate Smart - Live Log" FontWeight="Bold" VerticalAlignment="Center" Margin="6 0 0 5" Foreground="White" FontFamily="Consolas" FontSize="14"/>
        <RichTextBox
    x:Name="LogContainer"
    BorderBrush="Transparent"
    BorderThickness="0"
    DockPanel.Dock="Bottom"
    Focusable="True"
    IsHitTestVisible="True"
    FontFamily="Consolas"
    FontSize="14"
    Background="Black"
    Foreground="White"
    IsReadOnly="True"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Auto">
            <RichTextBox.Document>
                <FlowDocument>
                    <Paragraph x:Name="cursorParagraph" Margin="0">
                        <Run x:Name="cursorRun" Text="▮">
                            <Run.Foreground>
                                <SolidColorBrush x:Name="FlashBrush" Color="White"/>
                            </Run.Foreground>
                        </Run>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox.Document>

            <RichTextBox.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames
                        Storyboard.TargetName="FlashBrush"
                        Storyboard.TargetProperty="Opacity">
                                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0"/>
                                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:0.33"/>
                                <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0.43"/>
                                <DiscreteDoubleKeyFrame Value="0" KeyTime="0:0:0.76"/>
                                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.86"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </RichTextBox.Triggers>
        </RichTextBox>

    </DockPanel>
</Window>
